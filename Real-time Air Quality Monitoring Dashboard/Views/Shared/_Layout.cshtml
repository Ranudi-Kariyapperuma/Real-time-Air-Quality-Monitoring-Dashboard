<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Real_time_Air_Quality_Monitoring_Dashboard.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <title>@ViewData["Title"] - Air Quality Monitoring</title>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
        <nav>
            <a asp-area="" asp-controller="Home" asp-action="Index">HOME</a>
            <a asp-area="" asp-controller="About" asp-action="Index">ABOUT US</a>
            <a asp-area="" asp-controller="Contactus" asp-action="Index">CONTACT US</a>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <p>
            <a href="#">Dashboard</a> |
            <a href="#">Privacy Policy</a> |
            <a href="#">Contact Us</a>
        </p>
        <p>
            Follow us on
            <a href="https://x.com/nsbm_srilanka/status/1391237528905125889">
                <img src="~/lib/images/twitter.jpg" alt="Twitter" class="rounded-img" width="20" height="20">
            </a> 
           
            <a href="https://www.facebook.com/nsbm.lk/">
                <img src="~/lib/images/facebook.jpg" alt="Facebook" class="rounded-img" width="20" height="20">
            </a>
        </p>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
